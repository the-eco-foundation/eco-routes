{
    "name": "@eco-association/currency",
    "version": "1.5.0",
    "engines": {
      "node": ">=18.17.0"
    },
    "description": "An upgrade to the ECO and ECOx cryptocurrency contracts, governance contracts, and associated tooling.",
    "main": "index.js",
    "scripts": {
      "format": "concurrently 'npm:format:*'",
      "format:prettier": "prettier --write 'contracts/**/*.sol'",
      "format:eslint": "eslint --fix 'test/**/**.ts' 'deploy/**/**.ts'",
      "lint": "concurrently 'npm:lint:*'",
      "lint:depcheck": "depcheck --ignore-bin-package --ignores @openzeppelin/contracts,prettier-plugin-solidity,solhint-plugin-eco,concurrently,@types/mocha",
      "lint:solhint": "solhint 'contracts/**/*.sol'",
      "lint:eslint": "eslint 'test/**/**.ts' 'deploy/**/**.ts'",
      "lint:prettier": "prettier --check 'contracts/**/*.sol'",
      "build": "hardhat compile",
      "test": "hardhat test",
      "docgen": "hardhat docgen",
      "testGas": "ENABLE_GAS_REPORT=1 hardhat test",
      "testParallel": "hardhat test --parallel",
      "clean": "hardhat clean",
      "snapshots": "UPDATE_SNAPSHOT=1 hardhat test",
      "debug": "hardhat test",
      "coverage": "IS_COVERAGE=1 hardhat coverage",
      "coverageReport": "IS_COVERAGE=1 hardhat coverage; cd coverage; python3 -m http.server 7800",
      "prepack": "npm run build",
      "callGraph": "slither . --print call-graph; dot all_contracts.call-graph.dot -Tpng -o ./docs/slither/call-graph.png; rm *.call-graph.dot",
      "inheritanceGraph": "slither . --print inheritance-graph; dot inheritance-graph.dot -Tpng -o ./docs/slither/inheritance-graph.png; rm inheritance-graph.dot",
      "variableOrder": "slither --print variable-order . 2>&1 | sed -r 's/\\x1B\\[([0-9]{1,3}(;[0-9]{1,2};?)?)?[mGK]//g' | tee  ./docs/slither/variable-order.txt",
      "vulnerability": "slither . --exclude-informational --exclude-low --exclude-medium 2>&1 | sed -r 's/\\x1B\\[([0-9]{1,3}(;[0-9]{1,2};?)?)?[mGK]//g' | tee  ./docs/slither/vulnerability.txt",
      "contractSummary": "slither --print contract-summary . 2>&1 | tee ./docs/slither/contract-summary.txt",
      "publishRepo": "cd lib && npm publish",
      "publishLocal": "cd lib && npm pack",
      "prepareLib": "yarn build && npx ts-node scripts/publish/prepare.ts && cd lib && npx tsup src/index.ts",
      "updateDocs": "nvm use; yarn clean; rm -rf ./docs/solidity; rm ./docs/slither/*; yarn docgen; yarn callGraph; yarn inheritanceGraph; yarn variableOrder; yarn contractSummary"
    },
    "repository": {
      "type": "git",
      "url": "git+https://github.com/eco-association/currency-1.5.git"
    },
    "keywords": [
      "solidity",
      "ethereum"
    ],
    "files": [
      "contracts/**.sol",
      "build/contracts/**.json"
    ],
    "author": "Eco Engineering <eng@eco.com>",
    "license": "MIT",
    "dependencies": {
      "@openzeppelin/contracts": "4.8.3",
      "@openzeppelin/hardhat-upgrades": "^1.22.1",
      "bigdecimal": "^0.6.1",
      "dotenv": "^16.0.1",
      "ethers": "^5.6.9",
      "hardhat": "^2.14.1",
      "react": "^18.2.0",
      "solidity-docgen": "^0.6.0-beta.36",
      "tsup": "^8.0.0",
      "typescript": "4.8.3"
    },
    "devDependencies": {
      "@defi-wonderland/smock": "^2.0.2",
      "@ethersproject/abi": "^5.7.0",
      "@ethersproject/abstract-provider": "^5.7.0",
      "@ethersproject/abstract-signer": "^5.7.0",
      "@ethersproject/providers": "^5.7.0",
      "@helix-foundation/currency-dev": "1.0.11",
      "@metamask/eth-sig-util": "5.0.0",
      "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
      "@nomiclabs/hardhat-ethers": "^2.2.2",
      "@nomiclabs/hardhat-etherscan": "^3.1.7",
      "@nomiclabs/hardhat-waffle": "^2.0.1",
      "@typechain/ethers-v5": "10.1.0",
      "@typechain/hardhat": "6.1.3",
      "@types/chai": "^4.2.18",
      "@types/fs-extra": "^11.0.4",
      "@types/mocha": "9.1.1",
      "@types/node": "^20.4.5",
      "@typescript-eslint/eslint-plugin": "5.38.1",
      "@typescript-eslint/parser": "5.38.1",
      "chai": "^4.3.7",
      "concurrently": "7.4.0",
      "depcheck": "^1.4.3",
      "eslint": "8.24.0",
      "eslint-config-prettier": "8.5.0",
      "eslint-config-standard": "17.0.0",
      "eslint-plugin-chai-friendly": "0.7.2",
      "eslint-plugin-import": "2.26.0",
      "eslint-plugin-mocha": "10.1.0",
      "eslint-plugin-n": "15.3.0",
      "eslint-plugin-node": "11.1.0",
      "eslint-plugin-prettier": "4.2.1",
      "eslint-plugin-promise": "6.0.1",
      "ethereum-waffle": "^3.3.0",
      "fs-extra": "^11.1.1",
      "glob": "^10.3.10",
      "hardhat-gas-reporter": "1.0.9",
      "mocha": "^8.4.0",
      "prettier": "2.7.1",
      "prettier-plugin-solidity": "^1.1.3",
      "solhint": "3.3.7",
      "solhint-plugin-eco": "^0.1.0",
      "solidity-coverage": "0.8.3",
      "ts-node": "10.9.1",
      "typechain": "8.1.0"
    }
  }
  